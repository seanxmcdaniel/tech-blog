<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>

  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Post title:</label>
    <input class="form-input" name="post-title" type="text" value="{{post.title}}" />

    <label class="form-label" for="post-content">Post Content:</label>
    <textarea class="form-input" name="post-content"></textarea>{{post.post_content}}</textarea>

    <button type="button" id="delete-btn" class="btn">Delete post</button>

  </form>
</div>

<script src="/js/edit.js"></script>